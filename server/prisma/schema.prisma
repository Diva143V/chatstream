// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  username      String    @unique
  password      String
  avatar        String?
  banner        String?
  bio           String?
  status        UserStatus @default(OFFLINE)
  statusText    String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  ownedServers  Server[]  @relation("ServerOwner")
  memberships   ServerMember[]
  messages      Message[]
  sentFriendRequests    Friend[] @relation("FriendRequester")
  receivedFriendRequests Friend[] @relation("FriendReceiver")
  dmParticipants DirectMessageParticipant[]
  reactions     MessageReaction[]
  notifications Notification[]
  settings      UserSettings?
  invites       Invite[]
  moderationActionsTarget ModerationAction[] @relation("ModTarget")
  moderationActionsModerator ModerationAction[] @relation("Moderator")
  auditLogs     AuditLog[]
  ownedBots     Bot[]
  webhooks      Webhook[]

  @@map("users")
}

model UserSettings {
  id                    String  @id @default(cuid())
  userId                String  @unique
  theme                 Theme   @default(DARK)
  accentColor           String  @default("#6B4EFF")
  fontSize              FontSize @default(MEDIUM)
  messageDisplay        MessageDisplay @default(COZY)
  showAvatars           Boolean @default(true)
  playNotificationSounds Boolean @default(true)
  showNotifications     Boolean @default(true)
  showStatus            Boolean @default(true)
  allowFriendRequests   Boolean @default(true)
  allowDMs              DMPrivacy @default(FRIENDS)

  // Voice/Video Settings
  voiceMode         VoiceMode @default(VOICE_ACTIVITY)
  inputVolume       Int @default(100)
  outputVolume      Int @default(100)
  noiseSuppression  Boolean @default(true)
  pushToTalkKey     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
}

model Server {
  id          String  @id @default(cuid())
  name        String
  icon        String?
  banner      String?
  description String?
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner    User   @relation("ServerOwner", fields: [ownerId], references: [id])
  members  ServerMember[]
  channels Channel[]
  invites  Invite[]
  moderationActions ModerationAction[]
  auditLogs         AuditLog[]
  roles             Role[]
  webhooks          Webhook[]
  botInstallations  BotInstallation[]

  // Discovery
  isPublic      Boolean @default(false)
  tags          String[]
  featured      Boolean @default(false)
  memberCount   Int     @default(1)

  @@map("servers")
}

model ServerMember {
  id       String @id @default(cuid())
  userId   String
  serverId String
  inviteId String?
  role     MemberRole @default(MEMBER)
  roles    Role[] @relation("MemberRoles")
  joinedAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  server Server @relation(fields: [serverId], references: [id], onDelete: Cascade)
  invite Invite? @relation(fields: [inviteId], references: [id], onDelete: SetNull)

  @@unique([userId, serverId])
  @@map("server_members")
}

model Channel {
  id       String      @id @default(cuid())
  name     String
  type     ChannelType @default(TEXT)
  serverId String
  category String?
  position Int         @default(0)
  topic    String?
  createdAt DateTime   @default(now())

  server   Server    @relation(fields: [serverId], references: [id], onDelete: Cascade)
  messages Message[]
  webhooks Webhook[]

  @@map("channels")
}

model Message {
  id        String   @id @default(cuid())
  content   String
  authorId  String
  channelId String?
  dmId      String?
  edited    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author      User              @relation(fields: [authorId], references: [id])
  channel     Channel?          @relation(fields: [channelId], references: [id], onDelete: Cascade)
  directMessage DirectMessage?  @relation(fields: [dmId], references: [id], onDelete: Cascade)
  attachments Attachment[]
  reactions   MessageReaction[]

  @@index([channelId])
  @@index([dmId])
  @@map("messages")
}

model Attachment {
  id        String         @id @default(cuid())
  messageId String
  type      AttachmentType
  url       String
  name      String
  size      Int?
  createdAt DateTime       @default(now())

  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@map("attachments")
}

model MessageReaction {
  id        String   @id @default(cuid())
  messageId String
  userId    String
  emoji     String
  createdAt DateTime @default(now())

  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId, emoji])
  @@map("message_reactions")
}

model Friend {
  id          String       @id @default(cuid())
  requesterId String
  receiverId  String
  status      FriendStatus @default(PENDING)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  requester User @relation("FriendRequester", fields: [requesterId], references: [id], onDelete: Cascade)
  receiver  User @relation("FriendReceiver", fields: [receiverId], references: [id], onDelete: Cascade)

  @@unique([requesterId, receiverId])
  @@map("friends")
}

model DirectMessage {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  participants DirectMessageParticipant[]
  messages     Message[]

  @@map("direct_messages")
}

model DirectMessageParticipant {
  id      String @id @default(cuid())
  dmId    String
  userId  String

  dm   DirectMessage @relation(fields: [dmId], references: [id], onDelete: Cascade)
  user User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([dmId, userId])
  @@map("dm_participants")
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  content   String
  read      Boolean          @default(false)
  data      Json?
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("notifications")
}

model Invite {
  id        String   @id @default(cuid())
  code      String   @unique // e.g., "h7x2kz9"
  serverId  String
  creatorId String
  maxUses   Int?     // null = unlimited
  uses      Int      @default(0)
  expiresAt DateTime?
  createdAt DateTime @default(now())
  
  server  Server @relation(fields: [serverId], references: [id], onDelete: Cascade)
  creator User   @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  usedBy  ServerMember[]

  @@map("invites")
}

model ModerationAction {
  id          String         @id @default(cuid())
  type        ModerationType // TIMEOUT, KICK, BAN, WARN, UNBAN
  targetId    String
  moderatorId String
  serverId    String
  reason      String
  duration    Int?           // seconds, null = permanent
  expiresAt   DateTime?
  createdAt   DateTime       @default(now())

  target    User   @relation("ModTarget", fields: [targetId], references: [id], onDelete: Cascade)
  moderator User   @relation("Moderator", fields: [moderatorId], references: [id], onDelete: Cascade)
  server    Server @relation(fields: [serverId], references: [id], onDelete: Cascade)

  @@map("moderation_actions")
}

model AuditLog {
  id         String      @id @default(cuid())
  serverId   String
  actorId    String
  action     AuditAction
  targetType String      // USER, CHANNEL, MESSAGE, ROLE, SERVER
  targetId   String
  changes    Json?       // Before/after state or metadata
  reason     String?
  createdAt  DateTime    @default(now())

  server     Server      @relation(fields: [serverId], references: [id], onDelete: Cascade)
  actor      User        @relation(fields: [actorId], references: [id], onDelete: Cascade)

  @@map("audit_logs")
}

model Role {
  id          String   @id @default(cuid())
  serverId    String
  name        String
  color       String   @default("#99AAB5")
  position    Int
  permissions Int      @default(0) // Bitfield
  hoisted     Boolean  @default(false)
  mentionable Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  server      Server         @relation(fields: [serverId], references: [id], onDelete: Cascade)
  members     ServerMember[] @relation("MemberRoles")

  @@map("roles")
}

model Webhook {
  id        String   @id @default(cuid())
  channelId String
  name      String
  token     String   @unique
  avatar    String?
  creatorId String
  createdAt DateTime @default(now())
  
  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)
  creator User    @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  @@map("webhooks")
}

model Bot {
  id          String   @id @default(cuid())
  name        String
  ownerId     String
  token       String   @unique
  publicKey   String
  avatar      String?
  description String?
  verified    Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  owner       User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  installations BotInstallation[]

  @@map("bots")
}

model BotInstallation {
  id          String   @id @default(cuid())
  botId       String
  serverId    String
  permissions Int      @default(0)
  createdAt   DateTime @default(now())
  
  bot    Bot    @relation(fields: [botId], references: [id], onDelete: Cascade)
  server Server @relation(fields: [serverId], references: [id], onDelete: Cascade)
  
  @@unique([botId, serverId])
  @@map("bot_installations")
}

// Enums
enum UserStatus {
  ONLINE
  IDLE
  DND
  OFFLINE
}

enum Theme {
  DARK
  LIGHT
  SYSTEM
}

enum FontSize {
  SMALL
  MEDIUM
  LARGE
}

enum MessageDisplay {
  COZY
  COMPACT
}

enum DMPrivacy {
  EVERYONE
  FRIENDS
  NONE
}

enum MemberRole {
  OWNER
  ADMIN
  MODERATOR
  MEMBER
}

enum ChannelType {
  TEXT
  VOICE
  ANNOUNCEMENT
}

enum AttachmentType {
  IMAGE
  VIDEO
  FILE
}

enum FriendStatus {
  PENDING
  ACCEPTED
  BLOCKED
}

enum NotificationType {
  MESSAGE
  FRIEND_REQUEST
  MENTION
  SYSTEM
}

enum ModerationType {
  TIMEOUT
  KICK
  BAN
  WARN
  UNBAN
  UNTIMEOUT
}

enum AuditAction {
  MESSAGE_DELETE
  CHANNEL_CREATE
  CHANNEL_UPDATE
  CHANNEL_DELETE
  MEMBER_KICK
  MEMBER_BAN
  MEMBER_UNBAN
  MEMBER_TIMEOUT
  MEMBER_ROLE_UPDATE
  SERVER_UPDATE
  INVITE_CREATE
  INVITE_DELETE
}

enum VoiceMode {
  VOICE_ACTIVITY
  PUSH_TO_TALK
}
